<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="@string/saving_share_as"
        android:textStyle="bold" />

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/saveAsPicture"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:minWidth="126dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/saveAsVideo"
        android:foreground="?selectableItemBackground"
        android:background="#5161F6"
        android:gravity="center"
        android:layout_height="36dp">

        <TextView
            android:id="@+id/saveAsVideoText"
            android:drawablePadding="6dp"
            android:textColor="#EFF9FF"
            android:text="@string/animation_enabled"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_edit_animated"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/saveAsVideo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="28dp"
        android:id="@+id/saveAsPicture"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:minWidth="126dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:foreground="?selectableItemBackground"
        android:background="#D1EFFF"
        android:gravity="center"
        android:layout_height="36dp">

        <TextView
            android:id="@+id/saveAsPictureText"
            android:drawablePadding="6dp"
            android:textColor="#4F5EEC"
            android:text="@string/animation_disabled"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_edit_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
