<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_on_white_color">

    <item>

        <selector>
            <item android:state_activated="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">

                            <corners android:radius="20dp" />
                            <gradient
                                android:angle="180"
                                android:endColor="#6473FF"
                                android:startColor="#14CBF5" />
                        </shape>
                    </item>

                    <item
                        android:bottom="3dp"
                        android:gravity="center"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp">
                        <shape android:shape="rectangle">

                            <padding
                                android:bottom="3dp"
                                android:left="3dp"
                                android:right="3dp"
                                android:top="3dp" />

                            <corners android:radius="18dp" />
                            <solid android:color="#ffffff" />
                        </shape>
                    </item>

                    <item
                        android:bottom="3dp"
                        android:gravity="center"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp">
                        <shape android:shape="rectangle">

                            <corners android:radius="16dp" />
                            <solid android:color="#AFE2FF" />
                        </shape>
                    </item>
                </layer-list>

            </item>
            <item android:state_activated="false">

                <layer-list>

                    <item>
                        <shape android:shape="rectangle">

                            <corners android:radius="20dp" />
                            <solid android:color="#F4F9FF" />

                        </shape>
                    </item>

                    <item
                        android:bottom="3dp"
                        android:gravity="center"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp">
                        <shape android:shape="rectangle">
                            <corners android:radius="18dp" />
                            <solid android:color="#ffffff" />
                            <padding
                                android:bottom="3dp"
                                android:left="3dp"
                                android:right="3dp"
                                android:top="3dp" />
                        </shape>
                    </item>

                    <item
                        android:bottom="3dp"
                        android:gravity="center"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp">
                        <shape android:shape="rectangle">
                            <corners android:radius="16dp" />
                            <solid android:color="#F4F9FF" />
                        </shape>
                    </item>
                </layer-list>

            </item>
        </selector>

    </item>


    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</ripple>